<marker:AbstractMarker x:Class="SIGENCEScenarioTool.Markers.RectangleMarker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:marker="clr-namespace:SIGENCEScenarioTool.Markers" Height="30" Width="30">
    <Canvas>

        <Rectangle Width="30" Height="30" Fill="Lime" Opacity="0.5" />
        <Line X1="0" Y1="0" X2="30" Y2="30" Stroke="Black" />
        <Line X1="0" Y1="30" X2="30" Y2="0" Stroke="Black" />
        <Rectangle Width="30" Height="30" Stroke="{Binding Stroke}" StrokeThickness="{Binding StrokeThickness}" />

        <Polygon x:Name="DirectionArrow" Fill="Red" Height="30" Width="30" RenderTransformOrigin="0.5,0.5">
            <Polygon.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="DirectionAngle" Angle="67" />
                </TransformGroup>
            </Polygon.RenderTransform>
            <Polygon.Points>
                <Point X="13" Y="5" />
                <Point X="15" Y="0" />
                <Point X="17" Y="5" />
            </Polygon.Points>
        </Polygon>

    </Canvas>
</marker:AbstractMarker>