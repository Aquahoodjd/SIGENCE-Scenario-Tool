<UserControl x:Class="SIGENCEScenarioTool.Markers.TriangleMarker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="30" Width="30">
    <Grid>
        <Polygon Fill="Blue" Opacity="0.5">
            <Polygon.Points>
                <Point X="0" Y="30" />
                <Point X="15" Y="0" />
                <Point X="30" Y="30" />
            </Polygon.Points>
        </Polygon>
        <Polygon Stroke="Black">
            <Polygon.Points>
                <Point X="0" Y="30" />
                <Point X="15" Y="0" />
                <Point X="30" Y="30" />
            </Polygon.Points>
        </Polygon>
        <Line X1="0" Y1="30" X2="15" Y2="20" Stroke="Black" />
        <Line X1="15" Y1="0" X2="15" Y2="20" Stroke="Black" />
        <Line X1="30" Y1="30" X2="15" Y2="20" Stroke="Black" />
    </Grid>
</UserControl>