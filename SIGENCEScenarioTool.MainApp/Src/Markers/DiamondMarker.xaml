                <Point X="0" Y="15" />
                <Point X="15" Y="0" />
                <Point X="30" Y="15" />
                <Point X="15" Y="30" />
            </Polygon.Points>
        </Polygon>

        <Line X1="0" Y1="15" X2="30" Y2="15" Stroke="Black" />
        <Line X1="15" Y1="0" X2="15" Y2="30" Stroke="Black" />

        <!--<Ellipse Width="30" Height="30" Fill="Yellow" Opacity="0.5" />
