<marker:AbstractMarker x:Class="SIGENCEScenarioTool.Markers.CircleMarker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:marker="clr-namespace:SIGENCEScenarioTool.Markers" Height="30" Width="30">
    <Grid>
        <Ellipse Width="30" Height="30" Fill="Yellow" Opacity="0.5" />
        <Line X1="15" Y1="0" X2="15" Y2="30" Stroke="Black" />
        <Line X1="0" Y1="15" X2="30" Y2="15" Stroke="Black" />
        <Ellipse Width="30" Height="30" Stroke="{Binding Stroke}" StrokeThickness="{Binding StrokeThickness}" />
    </Grid>
</marker:AbstractMarker>